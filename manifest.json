{
  "manifest_version": 3,
  "name": "siders",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["*://*.espn.com/*", "*://*.siders.ai/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.espn.com/*", "*://*.siders.ai/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "dark-logo.png"
  }
}
